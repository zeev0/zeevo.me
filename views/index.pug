extends header
block content
    body.home
        .site-container
            .site-header
                include navbar
                header
                    h1 zeevo.me
                    .tagline Shane
            article
              if !posts.length
                p(style="font-style:italic") Theres nothing here... 
              each pst in posts
                - var date = moment(pst.date).format('MMMM Do, YYYY');
                div
                  .post-entry
                      h2
                        a(href='/' + pst.category + '/' + pst.location) #{pst.title}
                        span.post-date #{pst.category.charAt(0).toUpperCase() + pst.category.slice(1)}
                        span.post-date #{date}
                      .post-detail
                          .post-summary #{pst.description}
              if posts && posts.length > 0
                  h2.readmore
                      a(href='posts') Read more posts Â»
